<% if @billing_filter.errors.any? %>
  <div id="errorExplanation">    
    <ul>
    <% @billing_filter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div id="query_form_content" class="hide-when-print">
  <%= f.label "Start date" %>
  <%= f.text_field :start_date %>
  <%= calendar_for "billing_filter_start_date" %>

  <%= f.label "End date" %>
  <%= f.text_field :end_date %>
  <%= calendar_for "billing_filter_end_date" %>

  <%= submit_tag "Filter" %>
</div>
