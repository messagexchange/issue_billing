<h2>Issues for billing for <%= @billing_project.name %></h2>

<%= form_for(@billing_filter, :url => { :action => 'issues'}, :method => "get") do |f| %>
<%= render :partial => 'filter', :locals => {:f => f} %>
<% end %>

<table class="list">
  <thead>
    <tr>
      <th>ID</th>
      <th>Subject</th>
      <th>Date and Time</th>
      <th>Time spent</th>
    </tr>
  </thead>
  <tbody>
<% @issues.each do |i| %>
  <tr>
    <td><%= i.id %></td>
    <td><%= i.subject %></td>
    <td><%= format_time(i.created_on) %></td>
    <td><%= i.hours.to_s %></td>
  </tr>
  <% end %>
  </tbody>
</table>